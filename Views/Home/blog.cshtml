@{
    ViewData["Title"] = "Blog | Hadımköy Ankara Nakliyat";
    Layout = "_Layout";
}

<style>
    /* Grid */
    .page-wrap {
        max-width: 1200px;
        margin: 0 auto;
        padding: 24px;
        display: grid;
        gap: 24px;
        grid-template-columns: 280px 1fr
    }

    @@media (max-width:992px) {
        .page-wrap {
            grid-template-columns: 1fr
        }
    }

    /* Sidebar */
    .side {
        background: #0f172a;
        border-radius: 14px;
        padding: 18px
    }

        .side h3 {
            color: #fff;
            font-size: 18px;
            margin: 0 0 12px;
            font-weight: 800
        }

    .svc-list {
        display: flex;
        flex-direction: column;
        gap: 10px
    }

    .svc-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #172036;
        color: #e2e8f0;
        padding: 10px 12px;
        border-radius: 10px;
        text-decoration: none;
        border: 1px solid #23314f
    }

        .svc-item:hover {
            background: #1f2a44
        }

        .svc-item .arrow {
            background: #f97316;
            color: #fff;
            border-radius: 8px;
            padding: 4px 8px;
            font-weight: 700
        }

    /* Search */
    .search {
        margin-top: 16px;
        display: flex;
        gap: 8px
    }

        .search input {
            flex: 1;
            padding: 10px 12px;
            border-radius: 10px;
            border: 1px solid #d1d5db
        }

        .search button {
            padding: 10px 14px;
            border: none;
            border-radius: 10px;
            background: #f97316;
            color: #fff;
            font-weight: 700
        }

    /* Blog list */
    .content h1 {
        font-size: 28px;
        margin: 0 0 12px;
        font-weight: 900;
        color: #0f172a
    }

    .blog-grid {
        display: grid;
        gap: 18px;
        grid-template-columns: repeat(12,1fr)
    }

    .blog-card {
        grid-column: span 6;
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        overflow: hidden;
        display: flex;
        gap: 0;
        flex-direction: column
    }

    @@media (max-width:768px) {
        .blog-card {
            grid-column: span 12
        }
    }

    .blog-thumb {
        aspect-ratio: 16/9;
        background: #f3f4f6;
        object-fit: cover;
        width: 100%
    }

    .blog-body {
        padding: 14px
    }

    .blog-meta {
        font-size: 12px;
        color: #64748b;
        margin-bottom: 6px
    }

    .blog-title {
        font-size: 18px;
        font-weight: 800;
        color: #0f172a;
        margin: 0 0 6px
    }

    .blog-excerpt {
        color: #334155;
        margin: 0 0 10px
    }

    .blog-actions {
        display: flex;
        gap: 10px
    }

    .btn {
        padding: 10px 12px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 700
    }

    .btn-primary {
        background: #f97316;
        color: #fff
    }

    .btn-ghost {
        border: 2px solid #f97316;
        color: #f97316
    }

    /* Pagination */
    .pager {
        display: flex;
        gap: 8px;
        justify-content: center;
        margin-top: 18px
    }

        .pager a {
            padding: 8px 12px;
            border-radius: 10px;
            border: 1px solid #e5e7eb;
            text-decoration: none;
            color: #111827
        }

            .pager a.active {
                background: #0f172a;
                color: #fff;
                border-color: #0f172a
            }
</style>

