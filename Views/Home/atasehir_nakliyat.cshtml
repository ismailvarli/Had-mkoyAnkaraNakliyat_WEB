<style>
    :root {
        --primary-color: #d35400; /* Kurumsal Turuncu */
        --secondary-color: #2c3e50; /* Koyu Lacivert */
    }

    /* GENEL SAYFA YAPISI */
    .page-container {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 40px;
        max-width: 1200px;
        margin: 40px auto;
        padding: 0 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    /* SOL MENÜ (SIDEBAR) */
    .district-sidebar {
        background: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 20px;
        position: sticky;
        top: 20px;
        height: fit-content;
        box-shadow: 0 5px 15px rgba(0,0,0,0.03);
    }

        .district-sidebar h3 {
            color: var(--primary-color);
            font-size: 18px;
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 10px;
            margin-bottom: 15px;
            margin-top: 0;
        }

    .district-list {
        list-style: none;
        padding: 0;
        margin: 0;
        max-height: 600px;
        overflow-y: auto;
    }

        .district-list::-webkit-scrollbar {
            width: 5px;
        }

        .district-list::-webkit-scrollbar-thumb {
            background: #ccc;
            border-radius: 3px;
        }

        .district-list li {
            margin-bottom: 5px;
        }

        .district-list a {
            display: block;
            padding: 10px 15px;
            color: #555;
            text-decoration: none;
            border-radius: 4px;
            transition: all 0.3s;
            border-left: 3px solid transparent;
            font-size: 14px;
            background: #fdfdfd;
            border: 1px solid #f1f1f1;
        }

            .district-list a:hover {
                background: #fff3e0;
                color: var(--primary-color);
                border-left-color: var(--primary-color);
                padding-left: 20px;
            }

            .district-list a.active {
                background: var(--primary-color);
                color: #fff;
                border-color: var(--primary-color);
                font-weight: bold;
            }

    /* SAĞ İÇERİK ALANI */
    .content-area h1 {
        font-size: 30px;
        color: var(--secondary-color);
        margin-bottom: 20px;
        line-height: 1.3;
    }

    .hero-image-wrapper {
        position: relative;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

        .hero-image-wrapper img {
            width: 100%;
            height: auto;
            display: block;
            transition: transform 0.5s;
        }

        .hero-image-wrapper:hover img {
            transform: scale(1.02);
        }

    .hero-badge {
        position: absolute;
        bottom: 20px;
        left: 20px;
        background: rgba(211, 84, 0, 0.9);
        color: #fff;
        padding: 8px 15px;
        border-radius: 4px;
        font-size: 14px;
        font-weight: 600;
    }

    /* İçerik Kutuları */
    .intro-box {
        background: #f4f6f9;
        border-left: 5px solid var(--secondary-color);
        padding: 20px;
        font-size: 1.1em;
        line-height: 1.6;
        color: #444;
        margin-bottom: 30px;
        border-radius: 0 8px 8px 0;
    }

    h2 {
        color: var(--primary-color);
        font-size: 24px;
        margin-top: 40px;
        margin-bottom: 20px;
    }

    /* Özellik Gridleri */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin: 30px 0;
    }

    .feature-card {
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border: 1px solid #eee;
        text-align: center;
        transition: transform 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-color);
        }

        .feature-card i {
            font-size: 30px;
            margin-bottom: 15px;
            display: block;
        }

        .feature-card h4 {
            color: var(--secondary-color);
            margin: 0 0 10px 0;
            font-size: 18px;
        }

        .feature-card p {
            font-size: 14px;
            color: #666;
            margin: 0;
            line-height: 1.5;
        }

    /* Tablo */
    .info-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

        .info-table th {
            background: var(--secondary-color);
            color: #fff;
            padding: 15px;
            text-align: left;
            width: 35%;
        }

        .info-table td {
            background: #fff;
            padding: 15px;
            border-bottom: 1px solid #eee;
            color: #555;
        }

    /* SSS (Accordion) */
    details {
        background: #fff;
        margin-bottom: 10px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
    }

    summary {
        padding: 15px 20px;
        font-weight: 600;
        cursor: pointer;
        background: #f9f9f9;
        list-style: none;
        position: relative;
    }

        summary::-webkit-details-marker {
            display: none;
        }

        summary::after {
            content: '+';
            position: absolute;
            right: 20px;
            font-weight: bold;
            color: var(--primary-color);
            font-size: 18px;
        }

    details[open] summary::after {
        content: '-';
    }

    details p {
        padding: 20px;
        color: #666;
        margin: 0;
        border-top: 1px solid #eee;
        line-height: 1.6;
    }

    /* CTA Alanı */
    .cta-wrapper {
        background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
        padding: 40px;
        text-align: center;
        border-radius: 12px;
        margin-top: 50px;
        color: white;
        box-shadow: 0 15px 30px rgba(44, 62, 80, 0.2);
    }

        .cta-wrapper h3 {
            color: white;
            margin-top: 0;
        }

        .cta-wrapper p {
            color: #ecf0f1;
        }

    .btn-call {
        display: inline-block;
        background: #d35400;
        color: #fff;
        padding: 15px 40px;
        border-radius: 50px;
        font-weight: bold;
        text-decoration: none;
        font-size: 18px;
        margin-top: 20px;
        transition: all 0.3s;
        border: 2px solid #d35400;
    }

        .btn-call:hover {
            background: transparent;
            color: #d35400;
            border-color: #d35400;
            background: white;
        }

    /* MOBİL UYUMLULUK */
    @@media (max-width: 768px) {
        .page-container {
            grid-template-columns: 1fr;
        }

        .district-sidebar {
            order: 2;
            margin-top: 30px;
        }
    }
</style>

