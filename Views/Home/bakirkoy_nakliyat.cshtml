            transform: scale(1.02);
        }

    .hero-badge {
        position: absolute;
        bottom: 20px;
        left: 20px;
        background: rgba(44, 62, 80, 0.9);
        color: #fff;
        padding: 8px 20px;
        border-radius: 4px;
        font-size: 14px;
        font-weight: 600;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        letter-spacing: 0.5px;
    }

    /* İçerik Kutuları */
    .intro-box {
        background: #fffbfb; /* Hafif sıcak ton */
        border-left: 5px solid var(--accent-gold);
        padding: 20px;
        font-size: 1.1em;
        line-height: 1.6;
        color: #444;
        margin-bottom: 30px;
        border-radius: 0 8px 8px 0;
    }

    h2 {
        color: var(--secondary-color);
        font-size: 24px;
        margin-top: 40px;
        margin-bottom: 20px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    /* Özellik Gridleri */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin: 30px 0;
    }

    .feature-card {
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        border: 1px solid #eee;
        text-align: center;
        transition: transform 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary-color);
        }

        .feature-card i {
            font-size: 32px;
            margin-bottom: 15px;
            display: block;
            color: var(--primary-color);
        }

        .feature-card h4 {
            color: var(--secondary-color);
            margin: 0 0 10px 0;
            font-size: 18px;
        }

        .feature-card p {
            font-size: 14px;
            color: #666;
            margin: 0;
            line-height: 1.5;
        }

    /* Tablo */
    .info-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

        .info-table th {
            background: var(--secondary-color);
            color: #fff;
            padding: 15px;
            text-align: left;
            width: 35%;
        }

        .info-table td {
            background: #fff;
            padding: 15px;
            border-bottom: 1px solid #eee;
            color: #555;
        }

    /* SSS (Accordion) */
    details {
        background: #fff;
        margin-bottom: 10px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
    }

    summary {
        padding: 15px 20px;
        font-weight: 600;
        cursor: pointer;
        background: #f9f9f9;
        list-style: none;
        position: relative;
    }

        summary::-webkit-details-marker {
            display: none;
        }

        summary::after {
            content: '+';
            position: absolute;
            right: 20px;
            font-weight: bold;
            color: var(--primary-color);
            font-size: 18px;
        }

    details[open] summary::after {
        content: '-';
    }

    details p {
        padding: 20px;
        color: #666;
        margin: 0;
        border-top: 1px solid #eee;
        line-height: 1.6;
    }

    /* CTA Alanı */
    .cta-wrapper {
        background: linear-gradient(135deg, #2c3e50 0%, #000000 100%); /* Siyah-Lacivert VIP Gradient */
        padding: 40px;
        text-align: center;
        border-radius: 12px;
        margin-top: 50px;
        color: white;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
    }

        .cta-wrapper h3 {
            color: white;
            margin-top: 0;
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
            letter-spacing: 1px;
        }

        .cta-wrapper p {
            color: #bdc3c7;
            font-weight: 500;
            font-size: 16px;
        }

    .btn-call {
        display: inline-block;
        background: #c0392b; /* Koyu Kırmızı Buton */
        color: #fff;
        padding: 16px 50px;
        border-radius: 50px;
        font-weight: bold;
        text-decoration: none;
        font-size: 20px;
        margin-top: 25px;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

        .btn-call:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(192, 57, 43, 0.4);
            background: #e74c3c;
            color: white;
        }

    /* MOBİL UYUMLULUK */
    @@media (max-width: 768px) {
        .page-container {
            grid-template-columns: 1fr;
        }

        .district-sidebar {
            order: 2;
            margin-top: 30px;
        }
    }
