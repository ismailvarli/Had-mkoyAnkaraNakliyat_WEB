<style>
    /* Genel Yazı Renkleri */
    .contact-page h2,
    .contact-page p,
    .contact-page a,
    .contact-page .sec-title__tagline .text h4,
    .contact-page .sec-title__title,
    .contact-page__top-content-text1 p,
    .contact-page__bottom-single h2,
    .contact-page__bottom-single p,
    .contact-page__bottom-single a {
        color: #000 !important;
    }

    /* Form Kutucukları */
    .contact-page__top-form .input-box input,
    .contact-page__top-form .input-box textarea,
    .contact-page__top-form .select-box select {
        background-color: #f8f8f8;
        border: 2px solid #ddd;
        border-radius: 4px;
        padding: 12px 15px;
        width: 100%;
        color: #000;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .contact-page__top-form .input-box input:focus,
        .contact-page__top-form .input-box textarea:focus,
        .contact-page__top-form .select-box select:focus {
            border-color: #333;
            outline: none;
            box-shadow: 0 0 5px rgba(0,0,0,0.2);
        }

    /* Select Kutusu */
    .contact-page__top-form .select-box {
        position: relative;
    }

        .contact-page__top-form .select-box select {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 10px center;
            background-size: 15px;
        }

    /* Form İkonları */
    .contact-page__top-form .input-box .icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }

    /* Buton Stili */
    .contact-page__top-form .thm-btn {
        background-color: #333;
        color: #fff;
        border: none;
        padding: 12px 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

        .contact-page__top-form .thm-btn:hover {
            background-color: #000;
        }

    /* İletişim Bilgileri Kutuları */
    .contact-page__bottom-single {
        background-color: #f8f8f8;
        border: 1px solid #eee;
        padding: 25px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .contact-page__bottom-single:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-5px);
        }

    /* Harita Stili */
    .google-map-one__map {
        filter: grayscale(20%) contrast(110%);
        border: 1px solid #ddd;
    }

</style>

